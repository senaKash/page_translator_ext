{
  "manifest_version": 3,
  "name": "Page Translator",
  "version": "1.0",
  "description": "Переводит английский текст на странице на русский",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
